<%= error_messages_for(f.object) %>
<dl class="form">
  <dt><%= f.label :first_name, "First Name" %></dt>
  <dd><%= f.text_field(:first_name) %></dd>
</dl>
<dl class="form">
  <dt><%= f.label :middle_name, "Middle Name" %></dt>
  <dd><%= f.text_field(:middle_name) %></dd>
</dl>
<dl class="form">
  <dt><%= f.label :last_name, "Last Name" %></dt>
  <dd><%= f.text_field(:last_name) %></dd>
</dl>
<dl class="form">
  <dt><%= f.label :email, "Email" %></dt>
  <dd><%= f.text_field(:email) %></dd>
</dl>
<dl class="form">
  <dt><%= f.label :email_confirmation, "Confirm email" %></dt>
  <dd><%= f.text_field(:email_confirmation) %></dd>
</dl>
<dl class="form">
  <dt><%= f.label :password, "Password" %></dt>
  <dd><%= f.password_field(:password) %></dd>
</dl>
<dl class="form">
  <dt><%= f.label :password_confirmation, "Confirm password" %></dt>
  <dd><%= f.password_field(:password_confirmation) %></dd>
</dl>
<dl class="form">
  <dt><%= f.label :currency_id, "Currency" %></dt>
  <% if Currency.count != 0 %>
  <dd><%= f.collection_select(:currency_id, Currency.all, :id, :code) %></dd>
  <% else %>
  <% Currency.create!(code:"USD", symbol:"$", rate_to_gbp:0.75) %>
  <% Currency.create!(code:"GBP", symbol:"£", rate_to_gbp:1)%>
  <% Currency.create!(code:"CNY", symbol:"¥", rate_to_gbp:0.11)%>
  <dd><%= f.collection_select(:currency_id, Currency.all, :id, :code) %></dd>
  <% end %>
</dl>