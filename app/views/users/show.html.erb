<% @title="View User" %>

<h1>View your user</h1>
<p>This page shows you a particular user</p>
<%= link_to("View all users", users_path()) %>
<%= link_to('Edit this user', edit_user_path(@user)) %>
<table class="table">
  <tr>
    <th>First Name</th>
    <th>Middle Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Password</th>
  </tr>
  <tr>
    <td><%= @user.first_name %></td>
    <td><%= @user.middle_name %></td>
    <td><%= @user.last_name %></td>
    <td><%= @user.email %></td>
    <td><%= @user.password %></td>
  </tr>
</table>
