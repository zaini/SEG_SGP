<% @title="View User" %>
<div class="container mt-5">
  <h1>View your user</h1>
  <%= link_to("View all users", users_path()) %>
  <br/>
  <%= link_to('Edit this user', edit_user_path(@user)) %>
  <br/>
  <br/>
  <table class="table">
    <tr>
      <th>First Name</th>
      <th>Middle Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Password</th>
    </tr>
    <tr>
      <td><%= @user.first_name %></td>
      <td><%= @user.middle_name %></td>
      <td><%= @user.last_name %></td>
      <td><%= @user.email %></td>
      <td><%= @user.password %></td>
    </tr>
  </table>
</div>
